<head>
  <%= stylesheet_link_tag "bootstrap3.0", :media => "all" %>
</head>

<div class="container'">
  <div class= "row header-color">
    <%= image_tag("biker/new_banner.jpg", :class => 'img-responsive') %>
  </div>

  <div class="row">
    <div class="imageAndText">
      <%= image_tag("biker/biker_2.jpg",:class => 'biker-responsive') %>

      <div class="col">
        <div class="col-md-12 share-wrap">
          <p class="why brandon">Don't leave your friends behind</p>
          <p class="title brandon">INVITE FRIENDS &<br>Earn Product</p>
          <p class="subtitle brandon">
            Share your unique link via email, Facebook<br>or Twitter and earn awesome perks for<br>each friend who signs up.
          </p>

          <div class="copy-link brandon"><%= root_url %>?ref=<%= @user.referral_code %></div>
          <% twitter_message = "The ultimate audio experience for riders. Excited for @helmetbuds to launch." %>
          <div class="social-links">
            <a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&text=<%= CGI::escape(twitter_message) %>" class="fb" target="_blank"></a>
            <div class="sep"></div>
            <a href="http://twitter.com/share?url=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&text=<%= CGI::escape(twitter_message) %>" class="twit" target="_blank"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>